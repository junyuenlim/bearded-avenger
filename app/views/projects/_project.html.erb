<div class="project-card">
	<div class="project-image">
		<%= link_to(project) do %>
			<div style="background: url('<%= project.thumbnail.url(:medium) %>') no-repeat center; height: 140px; background-size: 100%;"></div>
		<% end %>
	</div>

	<div class="project-info">
		<div class="project-title">
			<%= link_to(project) do %>
				<h5><strong><%= project.title %></h5></strong></a>
			<% end %>
		</div>
		<% unless current_page?(projects_path) %>
			<hr>
			<p><small>in <%= project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ').html_safe %></small></p>
		<% end %>
	</div>
	<div class="project-stats" id="tooltip">
		<span class="glyphicon glyphicon-user" data-placement="bottom" rel="tooltip" title="Followers"></span><span><%= project.likes.size %></span>
		<span class="glyphicon glyphicon-eye-open" data-placement="bottom" rel="tooltip" title="Views"></span><span><%= project.impressionist_count %></span>
	</div>
</div>