<div class="discussion-cover" style="background-image: url('<%= @discussion.cover.url(:medium) %>');">
</div>

<div class="discussion-page">
  <div class="container">

    <div class="panel-group" id="accordion">
      <div id="collapseOne" class="panel-collapse collapse in">
        <div class="panel-body" style="height: 450px;">
        </div>
      </div>
    </div>

    <div class="col-sm-12 discussion-box" style="margin-top: 50px; min-height: 800px;">
      <h5 class="text-center">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          <span class="glyphicon glyphicon-chevron-up"></span>
        </a>
      </h5>
      <div class="discussion-box-content">
        <h1><%= @discussion.title %></h1>
        <p><%= @discussion.description %></p>

        <ul class="nav nav-tabs discussion-tabs">
          <li class="active"><a href="#inspiration" data-toggle="tab"><span class="glyphicon glyphicon-pushpin"></span> Inspiration</a></li>
          <li><a href="#ideas" data-toggle="tab"><span class="glyphicon glyphicon-star"></span> Ideas</a></li>
          <li><a href="#discuss" data-toggle="tab"><span class="glyphicon glyphicon-comment"></span> Discuss</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade in active" id="inspiration">
            <% for inspiration in @discussion.inspirations %>
              <div class="project-card">
                <%= inspiration.title %>
              </div>
            <% end %>
            <%= link_to new_discussion_inspiration_path(@discussion, @inspiration), class: "btn btn-default" do %><span class="glyphicon glyphicon-pushpin"></span> + Share Your Observation<% end %>
          <!-- Button trigger modal 
          <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
          </button>-->

          <!-- Modal -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                  
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->
          </div>
          <div class="tab-pane fade" id="ideas">Ideas</div>
          <div class="tab-pane fade" id="discuss">Discussion</div>
        </div>

        <% if current_user == @discussion.user || current_user.superadmin? %>
         <%= link_to edit_discussion_path(@discussion), class: "btn btn-default" do %>
          Edit discussion
         <% end %>
        <% end %>

      </div>
    </div>

  </div>
</div>