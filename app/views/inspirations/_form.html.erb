<%= form_for([@discussion, @inspiration]) do |f| %>
  <% if @inspiration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inspiration.errors.count, "error") %> prohibited this inspiration from being saved:</h2>

      <ul>
      <% @inspiration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "Question" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group" id="wysihtml5">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control wysihtml5", rows: "5" %>
  </div>

  <div class="form-group">
    <%= f.label "Upload thumbnail image" %>
    <%= f.file_field :image %>
    <p class="help-block"><small>JPG/PNG/GIF no larger than 5mb</small></p>
  </div>

  <div class="form-group" id="wysihtml5">
    <%= f.label :discussion_id %>
    <%= f.text_field :discussion_id %>
  </div>

  <div class="form-group" id="wysihtml5">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, :value => current_user.id %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>